{
    "$schema": "https://opencode.ai/theme.json",
    "name": "Catppuccin Macchiato",
    "defs": {
      "base": "#24273a",
      "mantle": "#1e2030",
      "crust": "#181926",
      "text": "#cad3f5",
      "subtext1": "#b8c0e0",
      "subtext0": "#a5adcb",
      "overlay2": "#939ab7",
      "overlay1": "#8087a2",
      "overlay0": "#6e738d",
      "surface2": "#5b6078",
      "surface1": "#494d64",
      "surface0": "#363a4f",
      "rosewater": "#f4dbd6",
      "flamingo": "#f0c6c6",
      "pink": "#f5bde6",
      "mauve": "#c6a0f6",
      "red": "#ed8796",
      "maroon": "#ee99a0",
      "peach": "#f5a97f",
      "yellow": "#eed49f",
      "green": "#a6da95",
      "teal": "#8bd5ca",
      "sky": "#91d7e3",
      "sapphire": "#7dc4e4",
      "blue": "#8aadf4",
      "lavender": "#b7bdf8"
    },
    "theme": {
      "primary":       { "dark": "blue",     "light": "blue" },
      "secondary":     { "dark": "sapphire", "light": "sapphire" },
      "accent":        { "dark": "mauve",    "light": "mauve" },
      "error":         { "dark": "red",      "light": "red" },
      "warning":       { "dark": "peach",    "light": "peach" },
      "success":       { "dark": "green",    "light": "green" },
      "info":          { "dark": "blue",     "light": "blue" },
  
      "text":          { "dark": "#cad3f5",  "light": "#cad3f5" },
      "textMuted":     { "dark": "subtext0", "light": "subtext0" },
  
      "background":        "none",
      "backgroundPanel":   { "dark": "surface0", "light": "surface0" },
      "backgroundElement": { "dark": "surface1", "light": "surface1" },
  
      "border":        { "dark": "mauve", "light": "mauve" },
      "borderActive":  { "dark": "mauve", "light": "mauve" },
      "borderSubtle":  { "dark": "mauve", "light": "mauve" },
  
      "diffAdded":             { "dark": "green",   "light": "green" },
      "diffRemoved":           { "dark": "red",     "light": "red" },
      "diffContext":           { "dark": "overlay0","light": "overlay0" },
      "diffHunkHeader":        { "dark": "surface2","light": "surface2" },
      "diffHighlightAdded":    { "dark": "green",   "light": "green" },
      "diffHighlightRemoved":  { "dark": "red",     "light": "red" },
      "diffAddedBg":           { "dark": "surface0","light": "surface0" },
      "diffRemovedBg":         { "dark": "surface0","light": "surface0" },
      "diffContextBg":         { "dark": "surface1","light": "surface1" },
      "diffLineNumber":        { "dark": "overlay1","light": "overlay1" },
      "diffAddedLineNumberBg": { "dark": "surface0","light": "surface0" },
      "diffRemovedLineNumberBg":{ "dark": "surface0","light": "surface0" },
  
      "markdownText":          { "dark": "#cad3f5",  "light": "#cad3f5" },
      "markdownHeading":       { "dark": "mauve",    "light": "mauve" },
      "markdownLink":          { "dark": "blue",     "light": "blue" },
      "markdownLinkText":      { "dark": "sapphire", "light": "sapphire" },
      "markdownCode":          { "dark": "green",    "light": "green" },
      "markdownBlockQuote":    { "dark": "overlay1", "light": "overlay1" },
      "markdownEmph":          { "dark": "peach",    "light": "peach" },
      "markdownStrong":        { "dark": "yellow",   "light": "yellow" },
      "markdownHorizontalRule":{ "dark": "surface2", "light": "surface2" },
      "markdownListItem":      { "dark": "blue",     "light": "blue" },
      "markdownListEnumeration":{ "dark": "sapphire","light": "sapphire" },
      "markdownImage":         { "dark": "lavender", "light": "lavender" },
      "markdownImageText":     { "dark": "sapphire", "light": "sapphire" },
      "markdownCodeBlock":     { "dark": "#cad3f5",  "light": "#cad3f5" },
  
      "syntaxComment":     { "dark": "overlay0", "light": "overlay0" },
      "syntaxKeyword":     { "dark": "mauve",    "light": "mauve" },
      "syntaxFunction":    { "dark": "blue",     "light": "blue" },
      "syntaxVariable":    { "dark": "teal",     "light": "teal" },
      "syntaxString":      { "dark": "green",    "light": "green" },
      "syntaxNumber":      { "dark": "peach",    "light": "peach" },
      "syntaxType":        { "dark": "yellow",   "light": "yellow" },
      "syntaxOperator":    { "dark": "pink",     "light": "pink" },
      "syntaxPunctuation": { "dark": "overlay2", "light": "overlay2" }
    }
  }
  